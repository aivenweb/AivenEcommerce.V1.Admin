@inject AlertComponentService AlertService
@if (IsVisible)
{
    <div class="alert-container">
        <div class="@($"alert alert-{Color} alert-dismissible show fade")">
            @if (!string.IsNullOrWhiteSpace(Title))
            {
                <h4 class="alert-heading">@Title</h4>
            }

            <p>@Message</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" @onclick="CloseOnClick">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}


@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public string Color { get; set; }

    protected override void OnInitialized()
    {
        AlertService.OnShow += ShowAlert;
        AlertService.OnHide += HideAlert;
    }

    public void ShowAlert(string title, string message, string color)
    {
        IsVisible = true;
        Title = title;
        Message = message;
        Color = color;
        StateHasChanged();
    }

    void CloseOnClick(MouseEventArgs args)
    {
        IsVisible = false;
        StateHasChanged();
    }

    public void HideAlert()
    {
        IsVisible = false;
        StateHasChanged();
    }

}
