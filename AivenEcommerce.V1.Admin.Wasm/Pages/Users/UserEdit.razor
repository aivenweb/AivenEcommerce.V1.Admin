@page "/users/{Email}/edit"
@inject IJSRuntime JSRuntime
@inject AlertComponentService AlertService
@inject NavigationManager NavigationManager
@inject IUserService UserService

<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Editar Usuario</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><NavLink href="/">Dashboard</NavLink></li>
                        <li class="breadcrumb-item"><NavLink href="/users">Usuarios</NavLink></li>
                        <li class="breadcrumb-item active" aria-current="page">Editar</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                @if (customer is not null)
                {
                    <h4 class="card-title">@customer.Name @customer.LastName</h4>
                }
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label for="first-name-column">Nombre</label>
                                <input type="text" id="first-name-column" class="form-control" placeholder="Nombre" autocomplete="off" name="fname-column" @bind="name" />
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label for="last-name-column">Apellido</label>
                                <input type="text" id="last-name-column" class="form-control" placeholder="Apellido" autocomplete="off" name="lname-column" @bind="lastname" />
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" disabled class="form-control" name="country-floating" autocomplete="off" placeholder="Email" @bind-value="Email" />
                            </div>
                        </div>

                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label>Contraseña</label>
                                <input type="password" class="form-control" name="country-floating" autocomplete="off" placeholder="Contraseña" @bind="password">
                            </div>
                        </div>

                        <div class="col-12 d-flex justify-content-end">
                            <button class="btn btn-primary mr-1 mb-1" @onclick="Save">Guardar</button>
                            <NavLink href="/users" class="btn btn-light-secondary mr-1 mb-1">Cancelar</NavLink>
                            <button class="btn icon btn-danger mr-1 mb-1" @onclick="() => QuestionModal.Show()"><i data-feather="x"></i> Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>
<YesNoQuestionModal @ref="QuestionModal" Title="Eliminar Usuario" Question="¿Desea eliminar el cliente?" OnYesCallback="Delete" />

@code{
    [Parameter]
    public string Email { get; set; }

    UserDto customer;

    YesNoQuestionModal QuestionModal;

    string name = string.Empty;
    string lastname = string.Empty;
    string password = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var result = await UserService.GetAsync(Email);
        customer = result.Result;
        name = customer.Name;
        lastname = customer.LastName;
    }

    async Task Save(MouseEventArgs args)
    {
        var result = await UserService.UpdateAsync(new(customer.Id, name, lastname, customer.Email, password, customer.VerifiedEmail, customer.Picture, customer.Role, customer.AmbassadorId));

        if (result.IsSuccess)
        {
            NavigationManager.NavigateTo("/users");
        }
        else
        {
            AlertService.Show("Editar Usuario", result.Validations.Messages.First().Message, "danger");
        }
    }

    async Task Delete(MouseEventArgs args)
    {
        var result = await UserService.DeleteAsync(new(customer.Email));

        if (result.IsSuccess)
        {
            NavigationManager.NavigateTo("/users");
        }
        else
        {
            AlertService.Show("Eliminar Usuario", result.Validations.Messages.First().Message, "danger");
        }
    }

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        return JSRuntime.InvokeVoidAsync("AivenEcommerceAdmin.replaceIcons").AsTask();
    }
}