@page "/customers/{Email}/edit"
@inject IJSRuntime JSRuntime
@inject AlertComponentService AlertService
@inject NavigationManager NavigationManager
@inject ICustomerService CustomerService

<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Editar Cliente</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><NavLink href="/">Dashboard</NavLink></li>
                        <li class="breadcrumb-item"><NavLink href="/customers">Clientes</NavLink></li>
                        <li class="breadcrumb-item active" aria-current="page">Editar</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                @if (customer is not null)
                {
                    <h4 class="card-title">@customer.Name @customer.LastName</h4>
                }
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label for="first-name-column">Nombre</label>
                                <input type="text" id="first-name-column" class="form-control" placeholder="Nombre" autocomplete="off" name="fname-column" @bind="name" />
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label for="last-name-column">Apellido</label>
                                <input type="text" id="last-name-column" class="form-control" placeholder="Apellido" autocomplete="off" name="lname-column" @bind="lastname" />
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label for="country-floating">Email</label>
                                <input type="email" id="country-floating" disabled class="form-control" name="country-floating" autocomplete="off" placeholder="Email" @bind-value="Email">
                            </div>
                        </div>
                        <div class="col-md-6 col-12">

                            <div class="form-group">
                                <label>Sexo</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" value="@( (int)Gender.Male)" @onchange="RadioSelection" checked=@(gender == Gender.Male)>
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Hombre
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" value="@( (int)Gender.Female)" @onchange="RadioSelection" checked=@(gender == Gender.Female)>
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Mujer
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group">
                                <label for="country-floating">Fecha de Incio de Validez</label>
                                <input class="form-control" type="date" @bind="birthday" />
                            </div>
                        </div>
                        <div class="col-md-6 col-12">


                            <div class="col-12 d-flex justify-content-end">
                                <button class="btn btn-primary mr-1 mb-1" @onclick="Save">Guardar</button>
                                <NavLink href="/customers" class="btn btn-light-secondary mr-1 mb-1">Cancelar</NavLink>
                                <button class="btn icon btn-danger mr-1 mb-1" @onclick="() => QuestionModal.Show()"><i data-feather="x"></i> Eliminar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>
<YesNoQuestionModal @ref="QuestionModal" Title="Eliminar Cliente" Question="¿Desea eliminar el cliente?" OnYesCallback="Delete" />

@code{
    [Parameter]
    public string Email { get; set; }

    CustomerDto customer;

    YesNoQuestionModal QuestionModal;

    string name = string.Empty;
    string lastname = string.Empty;
    string pictureUri = string.Empty;
    DateTime birthday = default;
    Gender gender = Gender.Other;

    protected override async Task OnInitializedAsync()
    {
        var result = await CustomerService.GetAsync(Email);
        customer = result.Result;
        name = customer.Name;
        lastname = customer.LastName;
        pictureUri = customer.Picture.ToString();
        birthday = customer.Birthday;
        gender = customer.Gender;
    }

    async Task Save(MouseEventArgs args)
    {
        var result = await CustomerService.UpdateAsync(new(customer.Id, name, lastname, customer.Email, new(pictureUri), customer.CreationDate, birthday, gender));

        if (result.IsSuccess)
        {
            NavigationManager.NavigateTo("/customers");
        }
        else
        {
            AlertService.Show("Editar Cliente", result.Validations.Messages.First().Message, "danger");
        }
    }

    async Task Delete(MouseEventArgs args)
    {
        var result = await CustomerService.DeleteAsync(new(customer.Email));

        if (result.IsSuccess)
        {
            NavigationManager.NavigateTo("/customers");
        }
        else
        {
            AlertService.Show("Eliminar Cliente", result.Validations.Messages.First().Message, "danger");
        }
    }

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        return JSRuntime.InvokeVoidAsync("AivenEcommerceAdmin.replaceIcons").AsTask();
    }

    void RadioSelection(ChangeEventArgs args)
    {
        gender = (Gender)int.Parse(args.Value.ToString());
    }
}